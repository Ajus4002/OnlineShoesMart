<style>
.tab{
    margin-left: 300px;
    margin-top: 50px;
}
</style>

<section  class="  tab">
    <div class="container">
        <div class="mt-3 row">
        <div class="d-flex justify-content-end mt-3 mb-3">
            <a href="/admin/add-category" class="btn btn-success">Add Category</a>
            
            </div>
            
        </div>
        <table class="table mt-3 datatable" >
            <thead>
                <tr>
                    <th scope="col">No</th>
                     <th scope="col">category</th>
                    <th scope="col">Edit</th>
                     <th scope="col">Delete</th> 
                </tr>
            </thead>
            <tbody>
                {{#each category}}
                <tr>
                    <th scope="row">{{@index}}</th>
                    <td>{{this.catname}}</td>
                
                     <td><a href="/admin/edit-category/{{this._id}}" class="btn btn-secondary fas fa-edit"></a></td>
                    <td>  <a href="/admin/delete-category/{{this._id}}" class="btn btn-danger fas fa-trash" onclick="return confirm('Do you want to delete{{this.name}}?')"></a>
                    
                </tr>
                {{/each}}
            </tbody>
        </table>

    </div>
</section>
<script>
$(function(){
$('#productsTable').dataTable();
});
</script>