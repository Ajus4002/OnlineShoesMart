<style>
.tab{
    margin-left: 300px;
    margin-top: 50px;
}
</style>

<section  class="  tab">
    <div class="container">
        <div class="mt-3 row">
        <div class="d-flex justify-content-end mt-3 mb-3">
            <a href="/admin/add-product" class="btn btn-success">Add Product</a>

            </div>

        </div>
        <table class="table datatable mt-3 " id="productsTable">
            <thead>
                <tr>
                    <th scope="col">No</th>
                    <th scope="col">Title</th>
                    <th scope="col">category</th>
                    <th scope="col">Price</th>
                    <th scope="col">Discount</th>
                     <th scope="col">Images</th>
                    <th scope="col">Edit</th>
                     <th scope="col">Delete</th>
                </tr>
            </thead>
            <tbody>
                {{#each product}}
                <tr>
                    <th scope="row">{{@index}}</th>
                    <td>{{this.name}}</td>
                    <td>{{this.category.catname}}</td>
                    <td>{{this.price}}</td>
                    <td>{{this.discount}}</td>
                    <td><img style="width: 110px;" src="/product-image/{{this._id}}.jpg" alt="gjhguk"></td>
                     <td><a href="/admin/edit-product/{{this._id}}" class="btn btn-secondary fas fa-edit"></a></td>
                    <td>  <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger fas fa-trash" onclick="return confirm('Do you want to delete{{this.name}}?')"></a>

                </tr>
                {{/each}}
            </tbody>
        </table>

    </div>
</section>
<script>
$(function(){
$('#productsTable').dataTable();
});
</script>
