<style>
.addproduct{

  margin-left: 350px;
  margin-top: 150px;

}
</style>


<section >
    <div class="container mt-4">
        <div class="row addproduct">
            <div class="col-md-6 ">
                <h2 class="text-center ">Add Products</h2>
                <form action="/admin/add-product" method="POST" enctype="multipart/form-data">
                    <label for="">Name</label>
                    <input type="text" name="name" class="form-control">
                    <label for="">category</label>
                    <select class="form-select form-control" name="category" aria-label="Default select example">
  <option selected>Open this select menu</option>
  {{#each category }}
  <option value="{{this._id}}">{{this.catname}}</option>
  {{/each}}
</select>
                    <label for="">price</label>
                    <input type="text" name="price" class="form-control">
                    <label for="">Discount</label>
                    <input type="text" name="discount" class="form-control">
                    <label for="">image</label>
                    <input name="image" type="file" class="form-control">
                     <label for="">Other-image</label>
                    <input name="images" type="file" multiple class="form-control">
                   <button type="submit" class="btn btn-success mt-4">Submit</button>
                <a href="/admin/product-table" class="btn mt-4 btn-outline-secondary float-right">Back</a>
                </form>
            </div>
        </div>
    </div>
</section>
{{#if itemAdded}}
<script>
    window.addEventListener('load', () => {
    $.alert({
        title: 'Success!',
        content: 'Item added to cart',
    });
    })
</script>
{{/if}}
