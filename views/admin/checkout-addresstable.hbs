<style>
.tab{
    margin-left: 300px;
    margin-top: 50px;
}
</style>

<section  class="  tab">
    <div class="container">
        <div class="mt-3 row">
        <div class="d-flex justify-content-end mt-3 mb-3">
            {{!-- <a href="/admin/add-product" class="btn btn-success">Add Product</a> --}}
            
            </div>
            
        </div>
        <table class="table mt-3 " id="productsTable">
            <thead>
                <tr>
                    <th scope="col">No</th>
                    <th scope="col">Full Name</th>
                    <th scope="col">Mobile Number</th>
                    <th scope="col">Landmark</th>
                     <th scope="col">Town/City</th>
                    <th scope="col">Adress Type</th>
                     <th scope="col">Delete</th> 
                </tr>
            </thead>
            <tbody>
                {{#each adress}}
                <tr>
                    <th scope="row">{{@index}}</th>
                    <td>{{this.address.name}}</td>
                    <td>{{this.address.mobile}}</td>
                    <td>{{this.address.landmark}}</td>
                    <td>{{this.address.town}}</td>
                    <td>{{this.address.addressType}}</td>
              
                     {{!-- <td><a href="/admin/edit-product/{{this._id}}" class="btn btn-secondary fas fa-edit"></a></td> --}}
                    <td>  <a href="/admin/delete-address/{{this._id}}" class="btn btn-danger fas fa-trash" onclick="return confirm('Do you want to delete{{this.name}}?')"></a>
                    
                </tr>
                {{/each}}
            </tbody>
        </table>

    </div>
</section>
<script>
$(function(){
$('#productsTable').dataTable();
});
</script>