<style>
.tab{
    margin-left: 300px;
    margin-top: 50px;
}
</style>

<section  class="  tab">
    <div class="container">
        <div class="mt-3 row">
        {{!-- <div class="d-flex justify-content-end mt-3 mb-3">
            <a href="/user/user-register" class="btn btn-success">Add User</a>
            
            </div> --}}
            
        </div>
        <table class="table table-borderless datatable mt-3 " id="userManagement">
            <thead>
                <tr>
                    <th scope="col">No</th>
                    <th scope="col">First Name</th>
                    <th scope="col">Last Name</th>
                    <th scope="col">Email Id</th>
                     <th scope="col">Phone Number</th>
                       <th scope="col">Activity</th>
                    {{!-- <th scope="col">Edit</th> --}}
                     <th scope="col">Delete</th> 
                </tr>
            </thead>
            <tbody>
                {{#each user}}
                <tr>
                    <th scope="row">{{@index}}</th>
                    <td>{{this.firstName}}</td>
                    <td>{{this.lastName}}</td>
                    <td>{{this.email}}</td>
                    <td>{{this.phoneNo}}</td>
                    
                    {{#if this.isBlocked}}
                     <td><a href="/admin/user/{{this._id}}/unblock" class="btn btn-danger "></a></td>

                    {{else}}
                     <td><a href="/admin/user/{{this._id}}/block" class="btn btn-success "></a></td>
                    {{/if}}
                     <!--<td><a href="/admin/edit-user/{{this._id}}" class="btn btn-secondary fas fa-edit"></a></td> -->
                    <td>  <a href="/admin/delete-user/{{this._id}}" class="btn btn-danger fas fa-trash" onclick="return confirm('Do you want to delete{{this.name}}?')"></a>
                   
                </tr>
                {{/each}}
            </tbody>
        </table>

    </div>
</section>

